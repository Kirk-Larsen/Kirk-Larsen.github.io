    doi = {10.1063/1.5079549},
    url = {https://doi.org/10.1063/1.5079549},
    eprint = {https://pubs.aip.org/aip/jcp/article-pdf/doi/10.1063/1.5079549/15558573/114301\_1\_online.pdf},
