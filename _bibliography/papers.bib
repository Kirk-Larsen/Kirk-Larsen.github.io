@article{doi:10.1126/science.adn6059,
  author = {Shuai Li  and Lixin Lu  and Swarnendu Bhattacharyya  and Carolyn Pearce  and Kai Li  and Emily T. Nienhuis  and Gilles Doumy  and R. D. Schaller  and S. Moeller  and M.-F. Lin  and G. Dakovski  and D. J. Hoffman  and D. Garratt  and Kirk A. Larsen  and J. D. Koralek  and C. Y. Hampton  and D. Cesar  and Joseph Duris  and Z. Zhang  and Nicholas Sudar  and James P. Cryan  and A. Marinelli  and Xiaosong Li  and Ludger Inhester  and Robin Santra  and Linda Young },
  title = {Attosecond-pump attosecond-probe x-ray spectroscopy of liquid water},
  journal = {Science},
  volume = {383},
  number = {6687},
